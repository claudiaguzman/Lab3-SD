extends ../layout
block content
  h1 Alumnos
  p
    a(href="/alumnos/create") Agregar alumno
  p

    a(href="/alumnos/buscar") Busqueda por rut
  p
    a(href="/alumnos/buscar2") Busqueda general
  -if(alumnos.length > 0)
    table
      thead
        tr
          th Nombre
          th Apellido
          th Rut
          th Carrera
          th
          th
          th
          th
          th
      tbody
        -each item in alumnos
          tr
            td #{item.nombre}
            td #{item.apellido}
            td #{item.rut}
            td #{item.carrera]
            
  -else
    p No hay alumnos